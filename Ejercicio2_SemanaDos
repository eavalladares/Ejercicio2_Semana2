namespace ejerciciosSemana2
{
    class Program
    {
        static void Main(string[] args)
        {
            //Se debe desarrollar un programa que pida el ingreso del precio de
            //de un articulo y la cantidad que lleva el cliente. Mostrar lo que
            //debe pagar el comprador

            Console.WriteLine("Sistema Supermercado La Tapachulteca");
            Console.WriteLine("Ingrese nombre del producto");
            string nombre = Console.ReadLine();

            Console.WriteLine($"Digite el precio en dolares de {nombre}: $");
            double precio = double.Parse(Console.ReadLine());

            Console.WriteLine($"Ingrese cantidad en unidades del producto {nombre}");
            int cantidad = int.Parse(Console.ReadLine());

            double Mpago = cantidad * precio;

            Console.WriteLine($"el total a pagar por {cantidad} {nombre} es de : ${Mpago}");

            //no cerrar consola
            Console.ReadLine();


        }

    }
}
